<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">
   <Label text="Welcome" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />
   <TextField text="User name" fx:id="tx1" GridPane.rowIndex="1" GridPane.columnIndex="0" />
   <TextField text="Password" fx:id="tx2" GridPane.rowIndex="1" GridPane.columnIndex="1" />
   <Button text="Sign in" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#singIn"/>
   <Button text="Sign up" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#singUp"/>
   <Label text="" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" fx:id="label"/>
   <Label GridPane.rowIndex="5" GridPane.columnIndex="0" text="  "/>
   <Label GridPane.rowIndex="5" GridPane.columnIndex="0" text="  "/>
   <Button GridPane.rowIndex="5" GridPane.columnIndex="0" text="Get a admin account" onAction="#getAdmin"/>
   <Button GridPane.rowIndex="6" GridPane.columnIndex="0" text="Get a employee account" onAction="#getEmployee"/>
   <Button GridPane.rowIndex="7" GridPane.columnIndex="0" text="Get a user account" onAction="#getUser"/>
</GridPane>
